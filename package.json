{
  "name": "cal-bhangra-app-backend",
  "version": "0.0.3",
  "description": "Backend services for the Cal Bhangra web & (possible) mobile apps",
  "main": "lib/index.js",
  "scripts": {
    "start": "nodemon lib/app.js --exec babel-node",
    "lint": "eslint . --fix",
    "pretest": "eslint .",
    "test": "NODE_CONFIG_DIR=\"$(pwd)/config\" nyc ava",
    "precover": "npm test",
    "cover": "nyc report --reporter=lcov",
    "ci": "npm run cover -s && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calbhangra/backend.git"
  },
  "author": "Gurpreet Atwal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/calbhangra/backend/issues"
  },
  "homepage": "https://github.com/calbhangra/backend#readme",
  "dependencies": {
    "bcrypt": "^0.8.7",
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.1",
    "config": "^1.21.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "jsonwebtoken": "^7.1.9",
    "lodash": "^4.13.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.0.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.23.3"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.5.0",
    "eslint": "^3.1.1",
    "eslint-config-smartcar": "^1.0.0",
    "nodemon": "^1.9.2",
    "nyc": "^8.3.0"
  },
  "eslintConfig": {
    "extends": "smartcar",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "rules": {
      "curly": "off"
    }
  },
  "ava": {
    "require": "babel-register"
  }
}
